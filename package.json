{
  "name": "live-translator",
  "version": "1.0.0",
  "private": true,
  "description": "Live Translator App - Real-time voice translation with WebRTC",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "pnpm build:packages && pnpm --filter web build",
    "build:web": "pnpm build:packages && pnpm --filter web build",
    "build:packages": "pnpm --filter @live-translator/core build && pnpm --filter @live-translator/ui build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck", 
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "vercel-build": "pnpm build:web"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "next": "14.2.15",
    "prettier": "^3.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}