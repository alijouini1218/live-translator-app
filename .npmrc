# Force pnpm usage - prevents npm from being used accidentally
package-manager=pnpm@8

# Hoisting configuration for monorepo
hoist-pattern[]=*

# Performance optimizations for CI/Vercel
prefer-frozen-lockfile=true
auto-install-peers=false

# Node modules configuration
node-linker=isolated

# Registry configuration
registry=https://registry.npmjs.org/

# Disable package-lock.json creation
package-lock=false

# Enable strict peer dependencies
strict-peer-dependencies=false